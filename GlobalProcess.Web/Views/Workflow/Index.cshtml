@model IEnumerable<GlobalProcess.Core.Models.Workflow>

<h1>Workflows</h1>
<a href="@Url.Action("Create", "Workflow")" class="btn btn-primary mb-3">Create New Workflow</a>
<div class="card">
    <div class="card-body">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="@Url.Action("Edit", "Workflow", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "Workflow", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                            <a href="@Url.Action("Index", "Step", new { workflowId = item.Id })" class="btn btn-success btn-sm">Manage Steps</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
