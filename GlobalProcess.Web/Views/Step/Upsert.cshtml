@using GlobalProcess.Application.ViewModels
@model StepViewModel

<h1>Create/Edit Step</h1>

<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StepTypeId"></label>
        <select asp-for="StepTypeId" class="form-control">
            @foreach (var stepType in ViewBag.StepTypes)
            {
                <option value="@stepType.Value">@stepType.Text</option>
            }
        </select>
        <span asp-validation-for="StepTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FormId"></label>
        <input asp-for="FormId" class="form-control" />
        <span asp-validation-for="FormId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="submit" class="btn btn-secondary" formaction="~/Step/Create?workflowId=@Model.WorkflowId">Save and Add Next Step</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
