@model GlobalProcess.Core.Models.DynamicField

<h1>Add Field</h1>

<form asp-action="AddField">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Label"></label>
        <input asp-for="Label" />
        <span asp-validation-for="Label"></span>
    </div>
    <div>
        <label asp-for="FieldType"></label>
        <select asp-for="FieldType">
            <option value="Text">Text</option>
            <option value="Number">Number</option>
            <option value="Date">Date</option>
            <option value="Dropdown">Dropdown</option>
        </select>
        <span asp-validation-for="FieldType"></span>
    </div>
    <div>
        <label asp-for="Options"></label>
        <input asp-for="Options" />
        <span asp-validation-for="Options"></span>
    </div>
    <div>
        <label asp-for="IsRequired"></label>
        <input asp-for="IsRequired" type="checkbox" />
        <span asp-validation-for="IsRequired"></span>
    </div>
    <input type="hidden" asp-for="FormId" value="@ViewBag.FormId" />
    <button type="submit">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
